page {
  height: 100%;
}
.sort {
  height: 100%;
}
.sort .sort_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.sort .sort_container .left_menu {
  flex: 2;
}
.sort .sort_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.sort .sort_container .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.sort .sort_container .right_content {
  flex: 5;
}
.sort .sort_container .right_content .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.sort .sort_container .right_content .goods_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.sort .sort_container .right_content .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.sort .sort_container .right_content .goods_group .goods_list navigator {
  width: 33.33%;
  text-align: center;
}
.sort .sort_container .right_content .goods_group .goods_list navigator image {
  width: 50%;
}
